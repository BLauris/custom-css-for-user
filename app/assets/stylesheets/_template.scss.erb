$background_color : <%= custom_style.background_color %>;
$font_color : <%= custom_style.font_color %>;
$font_style : <%= custom_style.font_style %>;
$font_size : <%= custom_style.font_size %>;

<% custom_style.logo.recreate_versions! if custom_style.logo.present? %>
$logo_url : '<%= custom_style.logo.normal.url %>';

.logo-placeholder{
  @if $logo_url !='' {
    background-image: url($logo_url) no-repeat;
  }
}

@import "application";
